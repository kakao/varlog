STORAGE_NODE_SRCS := $(shell find . -name '*.go')
STORAGE_NODE_MAIN := main.go
STORAGE_NODE_TARGET := $(BUILD_DIR)/storagenode

$(STORAGE_NODE_TARGET): $(STORAGE_NODE_SRCS) $(PKG_SRCS) $(INTERNAL_SRCS)
	$(GO) build $(GOFLAGS) $(GCFLAGS) -o $(STORAGE_NODE_TARGET) $(STORAGE_NODE_MAIN)

clean:
	$(RM) $(STORAGE_NODE_TARGET)

.PHONY: clean
