METADATA_REPOSITORY_SRCS := $(shell find . -name '*.go')
METADATA_REPOSITORY_MAIN := main.go
METADATA_REPOSITORY_TARGET := $(BUILD_DIR)/metadata_repository

$(METADATA_REPOSITORY_TARGET): $(METADATA_REPOSITORY_SRCS) $(PKG_SRCS) $(INTERNAL_SRCS)
	$(GO) build $(GOFLAGS) $(GCFLAGS) -o $(METADATA_REPOSITORY_TARGET) $(METADATA_REPOSITORY_MAIN)

clean:
	$(RM) $(METADATA_REPOSITORY_TARGET)

.PHONY: clean
