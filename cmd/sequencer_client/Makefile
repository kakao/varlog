SEQUENCER_CLIENT_SRCS := $(shell find . -name '*.go')
SEQUENCER_CLIENT_MAIN := main.go
SEQUENCER_CLIENT_TARGET := $(BUILD_DIR)/sequencer_client

$(SEQUENCER_CLIENT_TARGET): $(SEQUENCER_CLIENT_SRCS)
	PATH=$$PATH:$(GO_HOME)/bin $(GO) build $(GOFLAGS) $(GCFLAGS) -o $(SEQUENCER_CLIENT_TARGET) $(SEQUENCER_CLIENT_MAIN)

clean:
	$(RM) $(SEQUENCER_CLIENT_TARGET)

.PHONY: clean
