pipeline {
  agent any

  triggers {
    cron('@hourly')
  }

  stages {
    stage('build') {
      when {
        branch 'master'
      }
      steps {
        sh 'make all'
      }
    }

    stage('test') {
      when {
        branch 'master'
      }
      steps {
        sh 'make test TEST_TIMEOUT=100m TEST_PARALLEL=1 TEST_COUNT=200'
      }
    }
  }

  post {
    always {
      sh 'make test_report'
      junit 'build/reports/*.xml'
    }
  }

}
