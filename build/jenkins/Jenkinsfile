pipeline {
  agent any
  stages {

    stage('build') {
      steps {
        sh 'make all'
      }
    }

    stage('test') {
      steps {
        sh 'make test TEST_FAILFAST=1 TEST_TIMEOUT=1h TEST_COUNT=2 TEST_CPU=1,2,4,8,16,32 TEST_COVERAGE=1'
      }
    }

  }
  post {
    always {
      sh 'make test_report'
      sh 'make coverage_report'
      junit 'build/reports/*.xml'
      cobertura coberturaReportFile: "build/reports/coverage.xml"
    }
  }
}
